<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record id="view_medicina_cita_odontograma_form" model="ir.ui.view">
            <field name="name">medicina.cita.odontograma.form</field>
            <field name="model">medicina.cita.odontograma</field>
            <field name="inherit_id" ref="view_medicina_cita_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet" position="attributes">
                    <attribute name="string">Odontograma</attribute>
                </xpath>
                <xpath expr="//notebook[@name='medicina_ocupacional']" position="inside">
                    <page name="odontograma" string="Ficha odontológica" attrs="{'invisible': [('tipo_cita','!=','odontograma')]}"/>
                </xpath>
            </field>
        </record>
        
		<record id="view_medicina_cita_odontograma_tree" model="ir.ui.view">
            <field name="name">medicina.cita.odontograma.tree</field>
            <field name="model">medicina.cita.odontograma</field>
            <field name="inherit_id" ref="view_medicina_cita_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="/tree" position="attributes">
                    <attribute name="string">Odontograma</attribute>
                </xpath>
            </field>
	    </record>
        
	    <record model="ir.actions.act_window" id="medicina_cita_action_odontograma">
		    <field name="name">Cita - Odontología</field>
		    <field name="res_model">medicina.cita.odontograma</field>
		    <field name="view_mode">tree,form</field>
		    <field name="context">{'default_tipo_cita':'odontograma'}</field>
            <field name="domain">[('tipo_cita','=','odontograma')]</field>
	    </record>
        
        <menuitem name="Odontología" id="medicina_ocupacional_odontograma" parent="medicina_ocupacional" action="medicina_cita_action_odontograma" sequence="28"/>
	</data>
</odoo>
